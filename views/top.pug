doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title My Website
    link(rel="stylesheet", href="/stylesheets/main.css")
  body
    .container
      // ヘッダー
      header.top-float
        h2 現在の安否状況
        // 内訳
        #status-check
          // 安全
          .safe
            #safe-icon
            #safe-txt.num
              #safe #{safeUser}
              | /
              #whole #{wholeUser}
          // 安全終了
          // 危険
          .danger
            #danger-icon
            #dan-txt.num #{dangerUser}
          // 危険終了
          // 不明
          .uncertain
            #uncertain-icon
            #unc-txt.num #{unconfirmedUser}
          // 不明終了
        // 内訳終了
        // 状況文字
        .situations
          #anzen 安全
          #kinnkyuu 緊急
          #mikakunin 未確認
        // 状況文字終了
        // プルダウンメニュー
        nav#category-tab
          ul
            // has-childの本文は選択されたものにする、多分javascript
            li.has-child
              if reqUrl == '/1'
                a(href="#") 営業部
              else if reqUrl == '/2'
                a(href="#") 企画部
              else if reqUrl == '/3'
                a(href="#") 開発部
              else if reqUrl == '/4'
                a(href="#") 緊急
              else 
                a(href="#") 全社員
              ul
                li#category1.child
                  a(href="/top/1") 1:営業部
                li#category2.child
                  a(href="/top/2") 2:企画部
                li#category3.child
                  a(href="/top/3") 3:開発部
                li#emergency.child
                  a(href="/top/4") 緊急
                li#allemployee.child
                  a(href="/top") 全社員
        // プルダウンメニュー終了
      // ヘッダー終了
      // ここにスクロール可能なコンテンツを記述
      .scrollable-content
        // 一投稿分
        each record in data
          .posts
            // アイコン
            if record.state_left == 'rgb(110, 170, 0)'
              .icon(style="background-color: #6eaa00;")
                | #{record.iconName}
            else if record.state_left == 'rgb(214, 0, 21)'
              .icon(style="background-color: #d60015;")
                | #{record.iconName}
            else
              .icon(style="background-color: #C5C5C5;")
                | #{record.iconName}
            // アイコン終了
            // 内容
            .contents
              // 見出し部分
              .headline
                // フルネーム
                .full-name
                  .last-name #{record.names[0]}
                  .name #{record.names[1]}
                // フルネーム終了
                .department #{record.department}
                .time #{record.timeDiffPug}
              // コメント
              .comments
                // ここにコメントを表示
                if record.state_mid == undefined
                  p 設定されていません
                else 
                  p #{record.state_mid}
              // ステータス終了
            // 見出し部分終了
            // 内容終了
          // 一投稿分終了
        // スクロール終了
      // フッター
      .bottom-float
        // 名前の一文字目
        if loginUserState == 'rgb(110, 170, 0)'
          a#eyecon.button.circle-button(href="/api/v1/redirectTop" style="background-color: #6eaa00;") #{loginUserName}
        else if loginUserState == 'rgb(214, 0, 21)'
          a#eyecon.button.circle-button(href="/api/v1/redirectTop" style="background-color: #d60015;") #{loginUserName}
        else 
          a#eyecon.button.circle-button(href="/api/v1/redirectTop" style="background-color: #6eaa00;") #{loginUserName}
        // テキストボックス
        form(action="api/v1/posting", method="post" name="textForm")
          textarea(name="comments", placeholder="健康状態・周辺状況・これからどうするか、等", maxlength="140", cols="60", rows="3")
          a#upload.button(href="/api/v1/redirectTop") 送信
        // テキストボックス終了
        // 四角いボタン
        .square-button
          a#logout.button(href="/login") ログアウト
        // 四角いボタン終了
      // フッター終了
    // jquery
    script(src="https://code.jquery.com/jquery-3.4.1.min.js", integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=", crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
    // 自作JS
    script(src="/javascripts/main.js")